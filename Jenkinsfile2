pipeline {
    agent any
    
    environment {
    	ETE_WORK_HOME='d:\\Users\\47238\\Downloads\\TEMP\\JENKINS\\SVN\\ETESystem'
    	ETE_APP_NAME1='atmtransform'
    }
    
    stages {
    	
        stage('Build') {
            steps {
            	bat 'svn checkout http://10.175.230.180:8080/svn/ETESystem/branches/UAT/apps/%ETE_APP_NAME1% %ETE_WORK_HOME%branches/UAT/apps/%ETE_APP_NAME1%'
                bat 'svn status'
            }
        }
        
        stage('Test') {
            steps {
                bat 'python --version'
            }
        }
        
        stage('Deploy') {
            steps {
                retry(3) {
                    bat 'python --version'
                }

                timeout(time: 3, unit: 'MINUTES') {
                    bat 'python --version'
                }
            }
        }
		stage('Human check') {
            steps {
                input "Does the environment look ok?"
            }
        }
        
    }
    post {
        always {
            echo 'This will always run'
        }
        success {
            echo 'This will run only if successful'
        }
        failure {
            echo 'This will run only if failed'
            mail to: '47238@tmbbank.com',
            	subject: "Failed Pipeline: ${currentBuild.fullDisplayName}",
            	body: "Something is wrong with ${env.BUILD_URL}"
            
        }
        unstable {
            echo 'This will run only if the run was marked as unstable'
        }
        changed {
            echo 'This will run only if the state of the Pipeline has changed'
            echo 'For example, if the Pipeline was previously failing but is now successful'
        }
    }
    
}