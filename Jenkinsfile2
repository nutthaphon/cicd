pipeline {
    agent any
    
    environment {
		ETE_SERVER='127.0.0.1'
		ETE_TYPE='apps'
    }
    
    stages {
    	stage ('Check program type') {

    	when {
                expression { params.IS_DOMAIN == TRUE }
            }
            steps {
                bat "set ETE_TYPE=domains"
            }
        }
    	
        stage('Build') {
       		environment {
                ETE_SERVER='127.0.0.1'
            }
            steps {
            	bat "IF NOT EXIST svn\\ETESystem mkdir svn\\ETESystem"
            	bat "cd %ETE_WORK_HOME%"
            	bat "svn checkout http://10.175.230.180:8080/svn/ETESystem/branches/${params.ETE_BRANCH}/${ETE_TYPE}/${params.ETE_APP_NAME} svn/ETESystem/branches/${params.ETE_BRANCH}/${ETE_TYPE}/${params.ETE_APP_NAME}"
                bat "svn status svn/ETESystem/branches/${params.ETE_BRANCH}/${ETE_TYPE}/${params.ETE_APP_NAME}"
            }
        }
        
        stage('Test') {
            steps {
                bat 'python --version'
            }
        }
        
        stage('Deploy') {
            steps {
                retry(3) {
                    bat 'python --version'
                }

                timeout(time: 3, unit: 'MINUTES') {
                    bat 'python --version'
                }
            }
        }
		stage('Human check') {
            steps {
                input "Does the environment look ok?"
            }
        }
        
    }
    post {
        always {
            echo 'This will always run'
        }
        success {
            echo 'This will run only if successful'
        }
        failure {
            echo 'This will run only if failed'
        }
        unstable {
            echo 'This will run only if the run was marked as unstable'
        }
        changed {
            echo 'This will run only if the state of the Pipeline has changed'
            echo 'For example, if the Pipeline was previously failing but is now successful'
        }
    }
    
}